{
  "name": "@youversion/bible-ui",
  "version": "0.3.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "npm run build:css && tsc",
    "build:watch": "npm run build:css -- --watch && tsc --watch",
    "build:css": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css",
    "watch:css": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --watch",
    "dev": "tsc --watch",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@storybook/addon-a11y": "^9.0.15",
    "@storybook/addon-docs": "^9.0.15",
    "@storybook/addon-onboarding": "^9.0.15",
    "@storybook/addon-styling-webpack": "2.0.0",
    "@storybook/addon-themes": "9.0.16",
    "@storybook/addon-vitest": "^9.0.15",
    "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
    "@storybook/react": "^9.0.16",
    "@storybook/react-webpack5": "^9.0.16",
    "@turbo/gen": "^2.5.0",
    "@types/add": "^2",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.0",
    "eslint-plugin-storybook": "^9.0.15",
    "playwright": "^1.53.2",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "storybook": "^9.0.15",
    "tailwindcss": "4.0.0",
    "typescript": "5.8.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@elevenlabs/elevenlabs-js": "^2.5.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@youversion/bible-core": "*",
    "add": "^2.0.6",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-tiny-popover": "^8.1.6",
    "yarn": "^1.22.22"
  }
}
